<%- include('includes/head'); %>
<%- include('includes/nav'); %>
<div class="container">
    <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8 my-3">
            <h1 class="display-1 text-center">Simulados Online</h1>
            <p class="text-center lead">Preencha os dados abaixo para encontramos sua prova:</p>
            <h3><%= prova %> </h3>
            <form action="/avaliacao" method="POST">
                <input type="hidden" name="_csrf" value=<%= csrfToken%>>
                <div class="form-group">
                    <input type="hidden" name="prova" value=<%= prova%>>
                    <label for="prova-select">Selecione um ano:</label>
                    <select class="form-control" name="ano"id="ano-select">
                        <% if(prova ==='ENEM'){ %>
                            <%  const anos = enemAnos();%>
                            <%  anos.forEach(val => { %>
                               <option value="<%=val%>"> <%=val%> </option>
                          <%  })%>
                      <%  } %> 
                      <% if(prova ==='FUVEST'){ %>
                        <%  const anos = fuvestAnos();%>
                        <%  anos.forEach(val => { %>
                           <option value="<%=val%>"> <%=val%> </option>
                      <%  })%>
                  <%  } %> 
                  <% if(prova ==='UNICAMP'){ %>
                    <%  const anos = unicampAnos();%>
                    <%  anos.forEach(val => { %>
                       <option value="<%=val%>"> <%=val%> </option>
                  <%  })%>
              <%  } %> 
                    </select>
                </div>
                <button type="submit" class="btn btn-primary mt-3">Submit</button>
              </form>
        </div>
        <div class="col-lg-2"></div>
    </div>
</div>

<%- include('includes/footer'); %>
